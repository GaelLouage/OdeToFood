@page
@model OdeTofood.Pages.Restaurant.ListModel
@{
}
<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
            asp-for="SearchTerm"/>
             <span class="input-group-btn">
                 <button type="submit">Search</button>
                 </span>
        </div>
    </div>

</form>
<p>@Model</p>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Location</th>
        <th>Cuisine</th>
    </tr>
    @foreach (var item in @Model.Restaurants)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Location</td>
            <td>@item.Cuisine</td>
            <td><a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@item.Id">Detail</a></td>
             <td><a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@item.Id">Edit</a></td>
        </tr>
    }
</table>
<a asp-page="Edit" class="btn btn-primary" asp-route-restaurantId="0">Add New</a>
<div>@Model.Message</div>